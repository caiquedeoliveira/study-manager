        <div class="item">
            <div>Avatar URL</div>
            <div>
               <input 
               type="url" 
               name="avatar_url"
               placeholder="http://"
               value="{{student.avatar_url}}"> 
            </div>
        </div>

        <div class="item">
            <div>Nome completo</div>
            <div>
                <input
                 type="text"
                 name="name"
                 placeholder="Insira seu nome"
                 value="{{student.name}}">
            </div>
        </div>

        <div class="item">
            <div>Email</div>
            <div>
                <input
                 type="email"
                 name="email"
                 placeholder="seuemail@com.br"
                 value="{{student.email}}">
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                type="date" 
                name="birth_date"
                value="{{student.birth_date}}">
            </div>
        </div>

        <div class="item">
            <div>Ano escolar</div>
            <div>
                <select name="school_year">
                    <option value="5EF" 
                    {% if student.school_year == "5EF" %} selected {% endif %}>5º ano do ensino fundamental</option>
                    <option value="6EF" 
                    {% if student.school_year == "6EF" %} selected {% endif %}>6º ano do ensino fundamental</option>
                    <option value="7EF" 
                    {% if student.school_year == "7EF" %} selected {% endif %}>7º ano do ensino fundamental</option>
                    <option value="8EF" 
                    {% if student.school_year == "8EF" %} selected {% endif %}>8º ano do ensino fundamental</option>
                    <option value="9EF" 
                    {% if student.school_year == "9EF" %} selected {% endif %}>9º ano do ensino fundamental</option>
                    <option value="1EM" 
                    {% if student.school_year == "1EM" %} selected {% endif %}>1º ano do ensino médio</option>
                    <option value="2EM" 
                    {% if student.school_year == "2EM" %} selected {% endif %}>2º ano do ensino médio</option>
                    <option value="3EM" 
                    {% if student.school_year == "3EM" %} selected {% endif %}>3º ano do ensino médio</option>
                </select>
            </div>
        </div>


        <div class="item">
            <div>Carga horária semanal</div>
            <div>
                <input
                 type="number"
                 name="workload"
                 placeholder="Quantas horas irá estudar por semana?"
                 value="{{student.workload}}">
            </div>
        </div>

        