        <div class="item">
            <div>Avatar URL</div>
            <div>
               <input 
               type="url" 
               name="avatar_url"
               placeholder="http://"
               value="{{teacher.avatar_url}}"> 
            </div>
        </div>

        <div class="item">
            <div>Nome completo</div>
            <div>
                <input
                 type="text"
                 name="name"
                 placeholder="Insira seu nome"
                 value="{{teacher.name}}">
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                type="date" 
                name="birth"
                value="{{teacher.birth}}">
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="schooling">
                    <option 
                        value="highschool"
                        {% if teacher.schooling == "highschool" %}
                            selected
                        {% endif %}>Ensino Médio Completo
                    </option>
                    <option 
                        value="college"
                        {% if teacher.schooling == "college" %}
                            selected
                        {% endif %}>Ensino Superior Completo
                    </option>
                    <option 
                        value="master"
                        {% if teacher.schooling == "master" %}
                            selected
                        {% endif %}
                    >Mestrado
                    </option>
                    <option 
                        value="doctorate"
                        {% if teacher.schooling == "doctorate" %}
                            selected
                        {% endif %}>Doutorado
                    </option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
            <div>
                <span>
                    <input 
                        type="radio" 
                        name="classtype" 
                        value="presencial"
                        {% if teacher.classtype == "presencial" %}
                            checked
                        {% endif %}>Presencial</span>
                <span>
                    <input 
                        type="radio" 
                        name="classtype" 
                        value="à distância"
                        {% if teacher.classtype == "à distância" %}
                            checked
                        {% endif %}>À distância</span>
            </div>
        </div>

        <div class="item">
            <div>Área de atuação</div>
            <div>
                <input 
                type="text" 
                name="services"
                placeholder="Digite as matérias lecionadas separadas por vírgula"
                value="{{teacher.services}}">
            </div>
        </div>

        