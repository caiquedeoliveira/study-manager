{% extends "layout.njk" %}

{% block content %}
<div class="card">

    <section class="avatar"
    style="background: url('{{teacher.avatar_url}}') no-repeat center center / cover">
    </section>

    <section class="details">
        <form method="POST" action="/teachers?_method=PUT">
                <h3>Editar cadastro</h3>

                {% include 'teachers/fields.njk'%}

                <div class="button-side">
                    <button type="submit">Salvar</button>
                    <button type="submit" form="form-delete">Deletar</button>
                </div>

                <input 
                type="hidden" 
                name="id"
                value="{{teacher.id}}">
        </form>

        <form id="form-delete" action="/teachers?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{teacher.id}}">
        </form>
    </section>
</div>

{% include 'confirm-delete.njk' %}

{% endblock content %}